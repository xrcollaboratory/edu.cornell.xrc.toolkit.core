{
    "metadata": [
        {
            "src": [
                {
                    "src": "..",
                    "files": [
                        "Runtime/**/*.cs"
                    ],
                    "exclude": [
                        "Editor/**/*.cs",
                        "Tests/**/*.cs"
                    ]
                }
            ],
            "globalNamespaceId": "Global",
            "filter": "filterConfig.yml",
            "dest": "api"
        }
    ],
    "build": {
        "template": [
            "default",
            "templates/xrc"
        ],
        "globalMetadata": {
            "_appTitle": "XRC Package Template",
            "_appFooter": "XR Collaboratory",
            "_enableSearch": true,
            "_disableContribution": true,
            "_appLogoPath": "images/logo/logo.svg",
            "_appFaviconPath": "images/logo/logo.ico"
        },
        "content": [
            {
                "files": [
                    "toc.yml",
                    "index.md"
                ]
            },
            {
                "src": "api",
                "files": [
                    "*.yml"
                ],
                "dest": "api"
            },
            {
                "src": "manual",
                "files": [
                    "toc.yml",
                    "*.md",
                    "**/*.md",
                    "**/*.yml"
                ],
                "dest": "manual"
            },
            {
                "src": "changelog",
                "files": [
                    "toc.yml",
                    "*.md"
                ],
                "dest": "changelog"
            },
            {
                "src": "license",
                "files": [
                    "toc.yml",
                    "*.md"
                ],
                "dest": "license"
            }
        ],
        "overwrite": [
            {
                "src": "..",
                "files": [
                    "Runtime/**/*.md"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "images/**/*"
                ]
            },
            {
                "files": [
                    "templates/xrc/styles/*"
                ]
            }
        ],
        "sitemap": {
            "baseUrl": "https://xrcollaboratory.github.io/xrc-package-template/",
            "changefreq": "weekly",
            "fileOptions": {
                "api/*": {
                    "changefreq": "daily"
                }
            }
        },
        "xref": [
            "https://normanderwan.github.io/UnityXrefMaps/xrefmap.yml"
        ],
        "xrefService": [
            "https://xref.docs.microsoft.com/query?uid={uid}"
        ],
        "dest": "../_site"
    }
}